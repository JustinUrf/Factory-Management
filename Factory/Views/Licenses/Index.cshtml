@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Liscences</h1>

@if (@Model.Count == 0)
{
  <h3>No Liscences have been added yet!</h3>
} 

@foreach (License license in Model)
{
  <li>@Html.ActionLink($"{license.LicenseDetail}", "Details", new { id = license.LicenseId })</li>
}

<p>@Html.ActionLink("Add new License", "Create", "Licenses")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>