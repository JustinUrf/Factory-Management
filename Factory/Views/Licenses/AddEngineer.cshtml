@{
  Layout = "_Layout";
}

@model Factory.Models.License

<h2>Add a License</h2>

<h4>Add an engineer to this License: @Html.DisplayFor(model => model.LicenseDetail)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.LicenseId)

    @Html.Label("Select Engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>